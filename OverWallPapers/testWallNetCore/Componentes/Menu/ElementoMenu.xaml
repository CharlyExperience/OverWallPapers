<UserControl x:Class="testWallNetCore.Componentes.Menu.ElementoMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:testWallNetCore.Componentes.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="GrdPrincipal" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition x:Name="ColDesplegable" Width="auto" />
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Padding="0" BorderThickness="0">
                <Image x:Name="ImgOpcion" Source="{Binding Icono}" Style="{StaticResource Icono}" ></Image>
        </Border>

        <Border Grid.Column="1" Padding="0,10,10,10" BorderThickness="0">
            <TextBlock x:Name="txtOpcion" Grid.Column="1" Grid.Row="1" Style="{StaticResource SubTitulo}" Foreground="{StaticResource Gris}" Margin="5" >Sets</TextBlock>
        </Border>

    </Grid>
</UserControl>
